<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/webcam_thumbnail"
        android:layout_width="200dp"
        android:layout_height="165dp"
        tools:layout_height="200dp"
        tools:layout_width="165dp"
        tools:src="@drawable/webcamplaceholder"
        android:contentDescription="WebCam Image"/>

    <TextView
        android:id="@+id/webcam_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/webcam_thumbnail"
        android:layout_toRightOf="@+id/webcam_thumbnail"
        android:gravity="center|top"
        android:maxLines="4"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="S.Marco\nTorre dell'Orologio 1"/>

</RelativeLayout>